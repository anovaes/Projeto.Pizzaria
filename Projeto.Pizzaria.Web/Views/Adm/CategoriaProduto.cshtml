@model IEnumerable<Projeto.Pizzaria.Web.Models.CategoriaProdutoModel>
@{
    ViewBag.Title = "CategoriaProduto";
}

<h2>Categoria Produto</h2>

<p>
    @Html.ActionLink("Criar novo", "CreateCategoriaProduto")
</p>


<table class="table">
    <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentualDesconto)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PercentualDesconto)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditCategoriaProduto", new { id=item.Id }) |
                    @Html.ActionLink("Detalhe", "DetailsCategoriaProduto", new { id=item.Id }) |
                    @Html.ActionLink("Deletar", "DeleteCategoriaProduto", new { id=item.Id })
                </td>
            </tr>
        }

</table>
